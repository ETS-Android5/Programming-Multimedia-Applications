<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_1_1"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_1_2"
            android:background="#D7A1E3"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_1_3"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:background="#D7A1E3"
            android:id="@+id/Button_2_1"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:background="#B8DFDB"
            android:id="@+id/Button_2_2"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_2_3"
            android:background="#D7A1E3"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_3_1"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_3_2"
            android:layout_weight="2.5"
            android:background="#D7A1E3"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/Button_3_3"
            android:layout_weight="2.5"
            android:textSize="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/switch_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="50dp"
            android:text="Play" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <Switch
            android:textSize="25dp"
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Computer" />
        <Switch
            android:textSize="25dp"
            android:id="@+id/switch2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Move" />
    </LinearLayout>
</LinearLayout>